import sqlite3
from sqlite3 import Error
 
 
def create_connection(db_file):
    """ create a database connection to the SQLite database
        specified by the db_file
    :param db_file: database file
    :return: Connection object or None
    """
    try:
        conn = sqlite3.connect(db_file)
        return conn
    except Error as e:
        print(e)
 
    return None


database = "C:\\Users\\thara.savio\\Desktop\\Adastra\\newdb.db"

# create a database connection
conn = create_connection(database)

cur = conn.cursor()
cur.execute("SELECT Customer,sum(Points) as Total FROM Loyalty group by Customer")

rows = cur.fetchall()

#for row in rows:
    
    #print(row)
    
for ke,val in rows:
    print ("the customer ",str(ke), "has" ,str(val), "points")
